<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample">
	<select id="getSampleList" resultType="com.company.dto.Sample">
		select * from sample
	</select>
		<select id="getSample" resultType="com.company.dto.Sample">
		select * from sample where num = #{num}
	</select>
	
	<insert id="insSample" parameterType="com.company.dto.Sample"> <!-- parametrtType은 생략도 가능. -->
		insert into sample values(#{num}, #{title}, #{res})
	</insert>
	<update id="upSample">
		update sample set title=#{title} where num=#{num}
	</update>
		<update id="delSample">
		delete from sample where num=#{num}
	</update>
</mapper>