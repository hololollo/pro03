<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fileboard">
	<select id="getFileboardList" resultType="com.company.dto.Fileboard">
		select * from fileboard order by resdate desc
	</select>
	<select id="getBasket" resultType="com.company.dto.Basket">
		select * from basket where bno=#{bno}
	</select>
	<insert id="insBasket">
		insert into basket values (#{bno}, #{id}, #{pno}, #{amount}, #{remark})
	</insert>
	<delete id="delBoard">
		delete from bakset where bno=#{bno}
	</delete>
	
</mapper>