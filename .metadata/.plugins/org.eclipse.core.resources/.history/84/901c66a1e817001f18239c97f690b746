<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">
	<select id="getProductList" resultType="com.company.dto.Product">
		select * from product order by pno desc
	</select>
	<select id="getProduct" resultType="com.company.dto.Product">
		select * from product where pno=#{pno}
	</select>
	<insert id="insProduct">
		insert into product values (#{pno}, #{pname}, #{com}, #{price}, #{img})
	</insert>
		<delete id="delFileboard">
		delete from fileboard where fno=#{fno}
	</delete>
	<update id="changeInfo" parameterType="com.company.dto.Fileboard">
        UPDATE Fileboard SET title = #{title}, content = #{content}, url = #{url} WHERE fno = #{fno} 
    </update> 

	
</mapper>