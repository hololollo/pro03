<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sales">
	<select id="getSalesList" resultType="com.company.dto.Sales">
		select * from sales order by sno desc
	</select>
	<select id="getSales" resultType="com.company.dto.Sales">
		select * from sales where sno=#{sno}
	</select>
	<insert id="insSales">
		insert into sales values (#{sno}, #{pno}, #{amount}, #{tot}, #{id}, #{paymethod}, #{paynum}, #{dno}, #{addr}, #{tel})
	</insert>
		<delete id="delSales">
		delete from sales where sno=#{sno}
	</delete>

</mapper>