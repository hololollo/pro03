<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="basket">
		<!-- 총 장바구니 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from basket
	</select>
	
		<!-- has a 관계 설정 ( 1 : 다 관계)-->
	<resultMap type="basket" id="basketRM">
		<result property="member.id" column="id"/>
		<result property="product.pno" column="pno"/>
	</resultMap>
	
	<!-- 사용자별 장비구니 목록 -->
	<select id="getBasketList" resultType="com.company.dto.Basket">
		select * from basket order by bno desc
	</select>
	<select id="getBasket" resultType="com.company.dto.Basket">
		select * from basket where bno=#{bno}
	</select>
	<insert id="insBasket">
		insert into basket values (#{bno}, #{id}, #{pno}, #{amount}, #{remark})
	</insert>
	<delete id="delBoard">
		delete from bakset where bno=#{bno}
	</delete>
	
</mapper>