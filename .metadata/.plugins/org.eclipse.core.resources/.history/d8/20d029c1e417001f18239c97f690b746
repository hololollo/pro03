<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fileboard">
	<select id="getFileboardList" resultType="com.company.dto.Fileboard">
		select * from fileboard order by resdate desc
	</select>
	<select id="getFileboard" resultType="com.company.dto.Fileboard">
		select * from fileboard where fno=#{fno}
	</select>
	<insert id="insFileboard">
		insert into basket values (#{bno}, #{id}, #{pno}, #{amount}, #{remark})
	</insert>
	 <update id="changeInfo" parameterType="com.company.dto.Fileboard">
        UPDATE member SET name = #{name}, email = #{email}, tel = #{tel}, addr = #{addr}, postcode = #{postcode}  WHERE id = #{id} </update> 
	<delete id="delBoard">
		delete from bakset where bno=#{bno}
	</delete>
	
</mapper>

<mapper namespace="member">

	<select id="getMemberList" resultType="com.company.dto.Member">
        select id, pw, name, email, tel, addr, postcode from member </select>

 	<select id="getMember" parameterType="String" resultType="com.company.dto.Member">
        SELECT id, pw, name, email, tel, addr, postcode FROM member WHERE id = #{id} </select>
    
    <insert id="insMember" parameterType="com.company.dto.Member">
        INSERT INTO member (id, pw, name, tel, addr, postcode) VALUES (#{id}, #{pw}, #{name}, #{email}, #{tel}, #{addr}, #{postcode}) </insert>
    
    <update id="changePw" parameterType="com.company.dto.Member">
        UPDATE member SET pw = #{pw} WHERE id = #{id} </update>    
    
    <update id="changeInfo" parameterType="com.company.dto.Member">
        UPDATE member SET name = #{name}, email = #{email}, tel = #{tel}, addr = #{addr}, postcode = #{postcode}  WHERE id = #{id} </update> 
           
    <delete id="delMember" parameterType="String">
        DELETE FROM member WHERE id = #{id} </delete>
    </select>