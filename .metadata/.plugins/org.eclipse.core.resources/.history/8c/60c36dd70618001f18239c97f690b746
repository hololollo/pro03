<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fileboard">
<!-- 강사 Mapper -->

<!-- 총 자료실 게시물 수 -->
	<select id="getTotalCount" resultType="int">
		select COUNT(*) from fileboard
	</select>
	
	<!-- 자료실 목록 조회 -->
	<select id="getFileboardList" parameterType="pagingBean" resultType="com.company.dto.Fileboard">
		select no, title, content, url, hits, resdate, author from fileboard 
		order by resdate desc 
		limit #{startRowNumber}, #{contentNumberPerPage} 
	</select>	
	
	<!-- 자료실 상세 보기 -->
	<select id="getFileboard" resultType="com.morning.domain.Fileboard">
		select * from fileboard where no=#{no}
	</select>
	
	<!-- 자료실 글 등록 -->
	<insert id="insFileboard" parameterType="com.morning.domain.Fileboard">
		insert into fileboard values (default, #{title}, #{content}, #{url}, default, 
		default, 'admin')
	</insert>
	
	<!-- 자료실 글 변경 -->
	<update id="upFileboard" parameterType="com.morning.domain.Fileboard">
		update fileboard set title=#{title}, content=#{content} where no=#{no}
	</update>

	<!-- 자료실 글 조회수 증가 -->
	<update id="hitCount">
		update fileboard set hits=hits+1 where no=#{no}
	</update>
	
	<!-- 자료실 글 삭제 -->
	<delete id="delFileboard">
		delete from fileboard where no=#{no}
	</delete>



<!-- 기존 작성 Mapper
	<select id="getFileboardList" resultType="com.company.dto.Fileboard">
		select * from fileboard order by resdate desc
	</select>
	<select id="getFileboard" resultType="com.company.dto.Fileboard">
		select * from fileboard where fno=#{fno}
	</select>
	<insert id="upFileboard">
		insert into fileboard values (#{fno}, #{title}, #{content}, #{url}, #{hits}, #{resdate}, #{author})
	</insert>
		<delete id="delFileboard">
		delete from fileboard where fno=#{fno}
	</delete>
	<update id="changeInfo" parameterType="com.company.dto.Fileboard">
        UPDATE Fileboard SET title = #{title}, content = #{content}, url = #{url} WHERE fno = #{fno} 
    </update> 
 -->
	
</mapper>